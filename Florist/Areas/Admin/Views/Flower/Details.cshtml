@model Florist.Models.ShoppingCart

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6 d-md-block">
            <img src="@Model.Flower.Image" width="100%"/>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <div class="col-md-8">
                    <input asp-for="Flower.Name" readonly class="form-control" style="background-color: white; border: none; font-size: 30px; color: mediumseagreen; font-weight:600;"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-8">
                    <div class="col-md-8">
                        <input asp-for="Flower.Description" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-8">
                    <input asp-for="Flower.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
    <input asp-for="FlowerId" hidden />
</form>

@section Scripts{


    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}