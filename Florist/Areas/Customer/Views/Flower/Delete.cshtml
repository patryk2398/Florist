@model Florist.Models.Flower
@{
    ViewData["Title"] = "Delete";
}

    <div class="col-12 col-md-10 offset-md-1 mb-5">
        <h1 style="font-family:'Playfair Display', serif;" class="goldColor">Usuń</h1>
        <hr />
        <form asp-action="Delete" class="col-12 col-md-10 offset-md-1 mb-5">
            <div class="row col-12" style="font-family:'Lucida Sans Unicode';">
                <img src="@Model.Image" style="width:100%" class="col-6" />
                <div class="col-6">
                    <h2 class="col-12">@Model.Name</h2>
                    <label class="col-12">@Model.Description</label>
                    <h2 class="col-12 mb-5">@Model.Price,00zł</h2>
                    <div class="form-group row">
                        <input type="submit" value="USUŃ" class="goldButton col-5" />
                        <a asp-action="Index" class="brownButton col-5 offset-2">POWRÓT</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
