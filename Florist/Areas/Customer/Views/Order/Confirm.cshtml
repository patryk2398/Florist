@model Florist.Models.ViewModel.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="col-10 offset-1 mb-5">
    <div class="row p-0">
        <div class="col-8 p-0">
            <h2 class="text-info">Zamówienie przyjęte</h2>
        </div>
        <div class="col-4 p-0">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">Kontynuuj zakupy</a>
        </div>
    </div>
    @if(Model.OrderHeader != null)
    {
        <div style="color: maroon" class="py-3">
            Twoje zamówienie zostało przyjęte! Poniżej umieszczono podsumowanie Twojego zamówienia.
            <br />
            W razie jakichkolwiek pytań skontaktuj się z nami.
        </div>
        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">
            Błąd... Skontaktuj się z nami.
        </div>
    }
</div>

