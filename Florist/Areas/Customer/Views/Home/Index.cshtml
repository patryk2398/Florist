@model IEnumerable<Flower>
@using Florist.Utility
@{
    ViewData["Title"] = "Home Page";
}

    <div>
        <h1 class="text-center naglowek">
            <span class="spanShadow">Nowości w naszej ofercie</span>
        </h1>
        <br />
        @if (Model.Count() > 0)
        {
            <div id="multi-item-example" class="carousel slide carousel-multi-item col-12 col-md-10 offset-md-1" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Math.Ceiling(Convert.ToDouble(Model.Count()) / 4); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#multi-item-example" data-slide-to="@i.ToString()" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#multi-item-example" data-slide-to="@i.ToString()"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner" role="listbox">
                    @for (int i = 0; i < Math.Ceiling(Convert.ToDouble(Model.Count()) / 4); i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">

                                @if (Model.Count() < 5)
                                {
                                    for (int j = 0; j < Model.Count(); j++)
                                    {
                                        var item = Model.ElementAt(i * 4 + j);
                                        <a asp-action="Details" asp-controller="Flower" asp-route-Id="@item.Id" class="col-3 " style="float:left">
                                            <img class="card-img-top"
                                                 src="@Html.DisplayFor(m => item.Image)"
                                                 alt="Card image cap">
                                            <div class="card-body text-center">
                                                <h5 class="font-weight-bold goldColor">@Html.DisplayFor(m => item.Name)</h5>
                                                <p>@Html.DisplayFor(m => item.Price) PLN</p>
                                            </div>
                                        </a>
                                    }
                                }
                                else
                                {
                                    for (int j = 0; j < 4; j++)
                                    {
                                        var item = Model.ElementAt(i * 4 + j);
                                        <a asp-action="Details" asp-controller="Flower" asp-route-Id="@item.Id" class="col-3 " style="float:left">
                                            <img class="card-img-top"
                                                 src="@Html.DisplayFor(m => item.Image)"
                                                 alt="Card image cap">
                                            <div class="card-body text-center">
                                                <h5 class="font-weight-bold goldColor">@Html.DisplayFor(m => item.Name)</h5>
                                                <p>@Html.DisplayFor(m => item.Price) PLN</p>
                                            </div>
                                        </a>
                                    }
                                }

                            </div>
                        }
                        else
                        {
                            <div class="carousel-item ">
                                @for (int j = 0; j < Convert.ToDouble(Model.Count() - i * 4); j++)
                                {
                                    var item = Model.ElementAt(i * 4 + j);
                                    <a asp-action="Details" asp-controller="Flower" asp-route-Id="@item.Id" class="col-3 " style="float:left">
                                        <img class="card-img-top"
                                             src="@Html.DisplayFor(m => item.Image)"
                                             alt="Card image cap">
                                        <div class="card-body text-center">
                                            <h5 class="card-title font-weight-bold goldColor mb-0">@Html.DisplayFor(m => item.Name)</h5>
                                            <p>@Html.DisplayFor(m => item.Price) PLN</p>
                                        </div>
                                    </a>
                                }
                            </div>
                        }

                    }
                </div>
            </div>
        }
        else
        {
            <p>Brak produktów do wyświetlenia...</p>
        }
        <br />
        <div id="aboutUs" class="col-12 col-xl-10 offset-xl-1 mt-5 mb-5 px-0">
            <h1 class="mb-4">O nas</h1>
            <h5>
                Florist to kwiaciarnia, która zawodowo i z
                przyjemnością zajmuje się doręczaniem szczęścia we
                Wrocławiu. Bukiety, które komponuje każdego dnia mają tylko jedno,
                ale jakże ważne zadanie: wywołać uśmiech na twarzy odbiorcy. Bardzo się
                staramy, żeby nasze bukiety były doskonałe,
