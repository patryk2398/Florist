@model IEnumerable<Flower>
@using Florist.Utility
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="h2 text-center" style="color:mediumseagreen;">Nasze bestsellery</h1>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <div id="carousel-example-multi" class="carousel slide carousel-multi-item v-2 product-carousel" data-ride="carousel">

                <!--Controls-->
                <div class="controls-top my-3">
                    <a class="btn-floating btn-sm" href="#carousel-example-multi" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
                    <a class="btn-floating btn-sm" href="#carousel-example-multi" data-slide="next"><i class="fas fa-chevron-right"></i></a>
                </div>
                <!--/.Controls-->
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carousel-example-multi" data-slide-to="@i.ToString()" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carousel-example-multi" data-slide-to="@i.ToString()"></li>
                        }
                    }
                </ol>
                <!--/.Indicators-->

                <div class="carousel-inner" role="listbox">
                    @foreach (var item in Model)
                    {
                        if (Model.First() == item)
                        {
                            <div class="carousel-item active">
                                <div class="col-12 col-md-4 col-lg-3 text-center">
                                    <div class="card mb-2">
                                        <div class="view overlay">
                                            <a asp-action="Details" asp-route-Id="@item.Id" class="recommend">
                                                <img src="@Html.DisplayFor(m => item.Image)" alt="photo">
                                            </a>
                                        </div>
                                        <div class="card-body p-3">
                                            <h5 class="card-title font-weight-bold fuchsia-rose-text mb-0">@Html.DisplayFor(m => item.Name)</h5>
                                            <p class="chili-pepper-text mb-0">@Html.DisplayFor(m => item.Price) PLN</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <div class="col-12 col-md-4 col-lg-3 text-center">
                                    <div class="card mb-2">
                                        <div class="view overlay">
                                            <a asp-action="Details" asp-route-Id="@item.Id" class="recommend">
                                                <img src="@Html.DisplayFor(m => item.Image)" alt="photo">
                                            </a>
                                        </div>
                                        <div class="card-body p-3">
                                            <h5 class="card-title font-weight-bold fuchsia-rose-text mb-0">@Html.DisplayFor(m => item.Name)</h5>
                                            <p class="chili-pepper-text mb-0">@Html.DisplayFor(m => item.Price) PLN</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        }
        else
        {
            <p>Brak produktów do wyświetlenia...</p>
        }
    </div>
</div>

