@model Florist.Models.OrderHeader
@using Florist.Utility
    <form method="post">
        <div class="container row border ml-1" style="width:100%">
            @if (Model.Status == SD.StatusSubmitted)
            {
                <img src="~/images/OrderPlaced.png" width="100%" />
            }
            @if (Model.Status == SD.StatusInProcess)
            {
                <img src="~/images/InKitchen.png" width="100%" />
            }
            @if (Model.Status == SD.StatusReady)
            {
                <img src="~/images/ReadyForPickup.png" width="100%" />
            }
            @if (Model.Status == SD.StatusCompleted)
            {
                <img src="~/images/Completed.png" width="100%" />
            }
        </div>
    </form>